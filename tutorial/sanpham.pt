                    <tr>
                        <th>Id Sản Phẩm</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Đơn Vị Tính</th>
                        <th>Action</th>
                    </tr>
                    <tr  tal:repeat="sanpham sanphams">
                        <td>${sanpham.id_sp}</td>
