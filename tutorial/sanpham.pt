                    <input name="name" type="text" class="form-control" maxlen="255" name="title" />
                </div>
                <div class="form-group">
                    <label>Tên Sản Phẩm</label>
                    <input class="form-control" maxlen="255" type="number" name="pages_count" />
                </div>
                <div class="form-group">
                    <label>Đơn Vị Tính</label>
                    <input class="form-control" maxlen="255" type="number" name="price" />
                </div>
                <div class="form-group">
                	<button type="submit" style="width: 100%" class="btn btn-primary" name="submit">Thêm Sản Phẩm</button>
                </div>
            </form>
        	</div>
    	</div>
