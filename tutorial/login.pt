</head>

<body>
    <span tal:replace="message" />
    <h2 class="text-center"><a href="${request.route_url('home')}">Trở về trang chủ</a></h2>
<!--     <a tal:condition="view.logged_in is None"
            href="${request.route_url('register')}">Register</a> -->
    <h1 class="text-center">Login</h1>
